extends layout

block content
  .container
    p.lead Let's find your perfect workout partner!
    
    #waiting
      p.lead Please wait...
      
    #user
      h3 How about 
        span#name
      div#profile-image-wrapper
        img#profile-image
      table.info-table
        tr
          td
            b Gender: 
            span#gender
          td
            b Experience: 
            span#experience
        tr
          td
            b Activity: 
            span#workoutType
          td
            b Time: 
            span#workoutTime
      br
      .btn-group.pull-right
        button.btn.btn-danger#reject.btn Reject
        button.btn.btn-info#skip.btn Skip
        button.btn.btn-success#accept.btn Accept

    a.btn.btn-info.pull-left(href="/exitQueue") Stop searching

    script var users = !{JSON.stringify(users)};
    script(src="/javascripts/browse.js", type="text/javascript")

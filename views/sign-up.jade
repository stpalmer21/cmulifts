extends layout

block content
  .container
    .well.bs-component
      form.form-horizontal
        fieldset
          legend Sign up
          .form-group
            label.col-lg-2.control-label(for='andrewID') Andrew ID
            .col-lg-10
              input#inputEmail.form-control(type='text', placeholder='Andrew ID')
          .form-group
            label.col-lg-2.control-label(for='inputPassword') Password
            .col-lg-10
              input#inputPassword.form-control(type='password', placeholder='*********')
          .form-group
            label.col-lg-2.control-label(for='age') Age
            .col-lg-10
              input#inputPassword.form-control(type='text', placeholder='19')
          .form-group
            label.col-lg-2.control-label(for='gender') Gender
            .col-lg-10
              select#select.form-control
                option Female
                option Male
                option Other
          .form-group
            label.col-lg-2.control-label(for='phone') Phone Number
            .col-lg-10
              input#inputPassword.form-control(type='text', placeholder='11234567890')
          .form-group
            .col-lg-2.col-lg-offset-10.col-xs-4.col-xs-offset-8
              button.btn.btn-primary(type='submit') Sign up!
